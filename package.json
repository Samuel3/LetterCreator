{
  "name": "LetterCreator",
  "version": "1.1.0",
  "license": "MIT",
  "description": "A simple app to create business letters",
  "author": "Samuel Mathes <samuel.mathes@gmail.com>",
  "main": "./app/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "build --dir",
    "prerelease": "node build/prebuild.js",
    "dist": "build",
    "release": "build"
  },
  "build": {
    "appId": "LetterCreator",
    "icon": "build/icon.ico",
    "publish": {
      "provider": "github",
      "repo": "https://github.com/Samuel3/LetterCreator",
      "owner": "Samuel3"
    },
    "nsis": {
      "perMachine": true
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": "nsis",
      "fileAssociations": {
        "ext": "let",
        "name": "LetterCreator"
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.0",
    "npm": "^6.7.0"
  },
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^20.38.5",
    "mocha": "^5.0.5",
    "spectron": "^3.8.0"
  }
}
