{
  "name": "LetterCreator",
  "version": "0.0.1",
  "license": "MIT",
  "description": "A simple app to create business letters",
  "author": "Samuel Mathes <samuel.mathes@gmail.com>",
  "main": "./app/index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "LetterCreator",
    "icon": "build/icon.ico",
    "nsis": {
      "perMachine": true
    },
    "win": {
      "target": "nsis",
      "fileAssociations": {
        "ext": "let",
        "name": "LetterCreator"
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}
